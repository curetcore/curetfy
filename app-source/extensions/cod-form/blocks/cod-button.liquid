{% if should_show %}
<div
  id="{{ container_id }}"
  class="curetfy-cod-container {{ alignment_class }}"
  data-block-id="{{ block.id }}"
  data-shop="{{ shop.permanent_domain }}"
  data-product-id="{{ product.id }}"
  data-product-title="{{ product.title | escape }}"
  data-product-price="{{ product_price_raw }}"
  data-product-price-formatted="{{ product_price }}"
  data-product-image="{{ product_image }}"
  data-variant-id="{{ current_variant.id }}"
  data-currency="{{ shop.currency }}"
  data-locale="{{ request.locale.iso_code }}"
  data-available="{{ product_available }}"
  data-mode="{{ button_mode }}"
  {% if block.settings.custom_class != blank %}data-custom-class="{{ block.settings.custom_class }}"{% endif %}
  style="
    margin-top: {{ block.settings.margin_top }}px;
    margin-bottom: {{ block.settings.margin_bottom }}px;
    {% if block.settings.button_alignment == 'left' %}text-align: left;{% endif %}
    {% if block.settings.button_alignment == 'center' %}text-align: center;{% endif %}
    {% if block.settings.button_alignment == 'right' %}text-align: right;{% endif %}
  "
>
  <button
    type="button"
    id="{{ button_id }}"
    class="curetfy-cod-button {{ animation_class }} {% if block.settings.custom_class != blank %}{{ block.settings.custom_class }}{% endif %}"
    {% if block.settings.hide_when_unavailable and product_available == false %}disabled{% endif %}
    style="
      {% if has_gradient %}
        background: linear-gradient({{ block.settings.gradient_angle }}deg, {{ block.settings.button_color }}, {{ block.settings.gradient_color }});
      {% else %}
        background-color: {{ block.settings.button_color }};
      {% endif %}
      color: {{ block.settings.button_text_color }};
      border-radius: {{ block.settings.button_radius }}px;
      padding: {{ block.settings.button_padding_y }}px {{ block.settings.button_padding_x }}px;
      font-size: {{ block.settings.button_font_size }}px;
      font-weight: {{ block.settings.button_font_weight }};
      letter-spacing: {{ block.settings.letter_spacing }}px;
      {% if block.settings.text_transform != 'none' %}text-transform: {{ block.settings.text_transform }};{% endif %}
      {% if block.settings.button_full_width %}width: 100%;{% endif %}
      {% if block.settings.button_shadow %}box-shadow: 0 4px 14px 0 rgba(0, 0, 0, 0.2);{% endif %}
      {% if has_border %}
        border: {{ block.settings.border_width }}px {{ block.settings.border_style }} {{ block.settings.border_color }};
      {% else %}
        border: none;
      {% endif %}
      --curetfy-hover-bg: {{ block.settings.hover_color }};
      --curetfy-hover-text: {{ block.settings.hover_text_color }};
      --curetfy-hover-scale: {{ block.settings.hover_scale }};
    "
  >
    {% if block.settings.show_icon and block.settings.icon_position == 'left' %}
      {{ selected_icon }}
    {% endif %}

    <span class="curetfy-btn-content">
      <span class="curetfy-btn-text">{{ block.settings.button_text }}</span>
      {% if block.settings.show_secondary_text %}
        <span class="curetfy-btn-secondary">
          {% case block.settings.secondary_text_type %}
            {% when 'price' %}
              {% if template.name == 'cart' %}
                {{ cart.total_price | money_without_trailing_zeros }}
              {% else %}
                {{ product_price }}
              {% endif %}
            {% when 'compare_price' %}
              {% if has_discount %}
                <span class="curetfy-price-compare">{{ compare_price }}</span>
                {{ product_price }}
              {% else %}
                {{ product_price }}
              {% endif %}
            {% when 'custom' %}
              {{ block.settings.secondary_text_custom }}
            {% when 'free_shipping' %}
              Envío gratis
            {% when 'stock' %}
              {% if product_available %}
                En stock
              {% else %}
                Agotado
              {% endif %}
          {% endcase %}
        </span>
      {% endif %}
    </span>

    {% if block.settings.show_icon and block.settings.icon_position == 'right' %}
      {{ selected_icon }}
    {% endif %}
  </button>
</div>
{% endif %}

