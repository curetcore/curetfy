{% comment %}
  Curetfy COD Form - Professional Buy Button Block
  Version: 4.1.0 - Full Featured with Inline Icons
{% endcomment %}

{% liquid
  assign button_id = 'curetfy-btn-' | append: block.id
  assign container_id = 'curetfy-container-' | append: block.id

  if product
    assign current_variant = product.selected_or_first_available_variant
    assign product_price = current_variant.price | money_without_trailing_zeros
    assign product_price_raw = current_variant.price | divided_by: 100.0
    assign product_image = product.featured_image | image_url: width: 200
    assign product_available = current_variant.available
    assign compare_price = current_variant.compare_at_price | money_without_trailing_zeros
    assign has_discount = false
    if current_variant.compare_at_price > current_variant.price
      assign has_discount = true
    endif
  endif

  if template.name == 'cart'
    assign cart_total = cart.total_price | divided_by: 100.0
    assign cart_count = cart.item_count
  endif

  assign has_gradient = false
  if block.settings.enable_gradient
    assign has_gradient = true
  endif

  assign has_border = false
  if block.settings.border_width > 0
    assign has_border = true
  endif

  assign animation_class = ''
  case block.settings.button_animation
    when 'pulse'
      assign animation_class = 'curetfy-animate-pulse'
    when 'glow'
      assign animation_class = 'curetfy-animate-glow'
    when 'shake'
      assign animation_class = 'curetfy-animate-shake'
    when 'bounce'
      assign animation_class = 'curetfy-animate-bounce'
    when 'wiggle'
      assign animation_class = 'curetfy-animate-wiggle'
    when 'heartbeat'
      assign animation_class = 'curetfy-animate-heartbeat'
    when 'flash'
      assign animation_class = 'curetfy-animate-flash'
    when 'rubber'
      assign animation_class = 'curetfy-animate-rubber'
    when 'swing'
      assign animation_class = 'curetfy-animate-swing'
    when 'tada'
      assign animation_class = 'curetfy-animate-tada'
  endcase

  assign alignment_class = ''
  case block.settings.button_alignment
    when 'left'
      assign alignment_class = 'curetfy-align-left'
    when 'center'
      assign alignment_class = 'curetfy-align-center'
    when 'right'
      assign alignment_class = 'curetfy-align-right'
  endcase

  assign should_show = true
  if block.settings.visibility == 'in_stock' and product_available == false
    assign should_show = false
  endif
  if block.settings.visibility == 'out_of_stock' and product_available == true
    assign should_show = false
  endif

  assign button_mode = 'product'
  if template.name == 'cart'
    assign button_mode = 'cart'
  endif
%}

