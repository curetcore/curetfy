{% comment %}
  Curetfy COD Form - Professional Buy Button Block
  Version: 2.0.0
{% endcomment %}

{% liquid
  assign button_id = 'curetfy-btn-' | append: block.id
  assign container_id = 'curetfy-container-' | append: block.id

  if product
    assign current_variant = product.selected_or_first_available_variant
    assign product_price = current_variant.price | money_without_trailing_zeros
    assign product_price_raw = current_variant.price | divided_by: 100.0
    assign product_image = product.featured_image | image_url: width: 200
    assign product_available = current_variant.available
  endif

  assign has_gradient = false
  if block.settings.enable_gradient
    assign has_gradient = true
  endif

  assign animation_class = ''
  case block.settings.button_animation
    when 'pulse'
      assign animation_class = 'curetfy-animate-pulse'
    when 'glow'
      assign animation_class = 'curetfy-animate-glow'
    when 'shake'
      assign animation_class = 'curetfy-animate-shake'
    when 'bounce'
      assign animation_class = 'curetfy-animate-bounce'
  endcase
%}

<div
  id="{{ container_id }}"
  class="curetfy-cod-container"
  data-block-id="{{ block.id }}"
  data-shop="{{ shop.permanent_domain }}"
  data-product-id="{{ product.id }}"
  data-product-title="{{ product.title | escape }}"
  data-product-price="{{ product_price_raw }}"
  data-product-price-formatted="{{ product_price }}"
  data-product-image="{{ product_image }}"
  data-variant-id="{{ current_variant.id }}"
  data-currency="{{ shop.currency }}"
  data-locale="{{ request.locale.iso_code }}"
  data-available="{{ product_available }}"
  data-mode="product"
  style="
    margin-top: {{ block.settings.margin_top }}px;
    margin-bottom: {{ block.settings.margin_bottom }}px;
  "
>
  <button
    type="button"
    id="{{ button_id }}"
    class="curetfy-cod-button {{ animation_class }}"
    {% unless product_available %}disabled{% endunless %}
    style="
      {% if has_gradient %}
        background: linear-gradient({{ block.settings.gradient_angle }}deg, {{ block.settings.button_color }}, {{ block.settings.gradient_color }});
      {% else %}
        background-color: {{ block.settings.button_color }};
      {% endif %}
      color: {{ block.settings.button_text_color }};
      border-radius: {{ block.settings.button_radius }}px;
      padding: {{ block.settings.button_padding_y }}px {{ block.settings.button_padding_x }}px;
      font-size: {{ block.settings.button_font_size }}px;
      font-weight: {{ block.settings.button_font_weight }};
      {% if block.settings.button_full_width %}width: 100%;{% endif %}
      {% if block.settings.button_shadow %}box-shadow: 0 4px 14px 0 rgba(0, 0, 0, 0.2);{% endif %}
    "
  >
    {% if block.settings.show_icon %}
      {% case block.settings.icon_type %}
        {% when 'whatsapp' %}
          <svg class="curetfy-btn-icon" viewBox="0 0 24 24" width="{{ block.settings.icon_size }}" height="{{ block.settings.icon_size }}" fill="currentColor">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
        {% when 'cart' %}
          <svg class="curetfy-btn-icon" viewBox="0 0 24 24" width="{{ block.settings.icon_size }}" height="{{ block.settings.icon_size }}" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="9" cy="21" r="1"/><circle cx="20" cy="21" r="1"/>
            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
          </svg>
        {% when 'bag' %}
          <svg class="curetfy-btn-icon" viewBox="0 0 24 24" width="{{ block.settings.icon_size }}" height="{{ block.settings.icon_size }}" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"/><line x1="3" y1="6" x2="21" y2="6"/><path d="M16 10a4 4 0 0 1-8 0"/>
          </svg>
      {% endcase %}
    {% endif %}
    <span class="curetfy-btn-text">{{ block.settings.button_text }}</span>
  </button>
</div>

{{ 'cod-form.css' | asset_url | stylesheet_tag }}
<script src="{{ 'cod-form.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "COD Buy Button",
  "target": "section",
  "class": "curetfy-block",
  "enabled_on": {
    "templates": ["product"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Texto del botón"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texto",
      "default": "Pedir por WhatsApp"
    },
    {
      "type": "range",
      "id": "button_font_size",
      "label": "Tamaño de fuente",
      "min": 12,
      "max": 22,
      "step": 1,
      "default": 15,
      "unit": "px"
    },
    {
      "type": "select",
      "id": "button_font_weight",
      "label": "Peso de fuente",
      "options": [
        { "value": "400", "label": "Normal" },
        { "value": "500", "label": "Medium" },
        { "value": "600", "label": "Semibold" },
        { "value": "700", "label": "Bold" }
      ],
      "default": "600"
    },
    {
      "type": "header",
      "content": "Colores"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Color principal",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Color del texto",
      "default": "#FFFFFF"
    },
    {
      "type": "checkbox",
      "id": "enable_gradient",
      "label": "Usar degradado",
      "default": false
    },
    {
      "type": "color",
      "id": "gradient_color",
      "label": "Segundo color (degradado)",
      "default": "#333333"
    },
    {
      "type": "range",
      "id": "gradient_angle",
      "label": "Ángulo del degradado",
      "min": 0,
      "max": 360,
      "step": 15,
      "default": 135,
      "unit": "°"
    },
    {
      "type": "header",
      "content": "Forma y tamaño"
    },
    {
      "type": "range",
      "id": "button_radius",
      "label": "Bordes redondeados",
      "min": 0,
      "max": 50,
      "step": 2,
      "default": 4,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "button_padding_y",
      "label": "Espaciado vertical",
      "min": 8,
      "max": 24,
      "step": 2,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "button_padding_x",
      "label": "Espaciado horizontal",
      "min": 16,
      "max": 48,
      "step": 4,
      "default": 32,
      "unit": "px"
    },
    {
      "type": "checkbox",
      "id": "button_full_width",
      "label": "Ancho completo",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "button_shadow",
      "label": "Mostrar sombra",
      "default": false
    },
    {
      "type": "header",
      "content": "Ícono"
    },
    {
      "type": "checkbox",
      "id": "show_icon",
      "label": "Mostrar ícono",
      "default": true
    },
    {
      "type": "select",
      "id": "icon_type",
      "label": "Tipo de ícono",
      "options": [
        { "value": "whatsapp", "label": "WhatsApp" },
        { "value": "cart", "label": "Carrito" },
        { "value": "bag", "label": "Bolsa" }
      ],
      "default": "whatsapp"
    },
    {
      "type": "range",
      "id": "icon_size",
      "label": "Tamaño del ícono",
      "min": 16,
      "max": 28,
      "step": 2,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Animación y espaciado"
    },
    {
      "type": "select",
      "id": "button_animation",
      "label": "Animación",
      "options": [
        { "value": "none", "label": "Ninguna" },
        { "value": "pulse", "label": "Pulso" },
        { "value": "glow", "label": "Brillo" },
        { "value": "shake", "label": "Vibrar" },
        { "value": "bounce", "label": "Rebote" }
      ],
      "default": "none"
    },
    {
      "type": "range",
      "id": "margin_top",
      "label": "Margen superior",
      "min": 0,
      "max": 40,
      "step": 4,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "label": "Margen inferior",
      "min": 0,
      "max": 40,
      "step": 4,
      "default": 0,
      "unit": "px"
    }
  ]
}
{% endschema %}
