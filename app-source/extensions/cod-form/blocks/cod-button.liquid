{% comment %}
  Curetfy COD Form - Buy Button Block
  Version: 1.0.0
{% endcomment %}

{% liquid
  assign button_id = 'curetfy-btn-' | append: block.id
  assign container_id = 'curetfy-container-' | append: block.id

  if product
    assign current_variant = product.selected_or_first_available_variant
    assign product_price = current_variant.price | money_without_trailing_zeros
    assign product_price_raw = current_variant.price | divided_by: 100.0
    assign product_image = product.featured_image | image_url: width: 200
    assign product_available = current_variant.available
  endif
%}

<div
  id="{{ container_id }}"
  class="curetfy-cod-container"
  data-block-id="{{ block.id }}"
  data-shop="{{ shop.permanent_domain }}"
  data-product-id="{{ product.id }}"
  data-product-title="{{ product.title | escape }}"
  data-product-price="{{ product_price_raw }}"
  data-product-price-formatted="{{ product_price }}"
  data-product-image="{{ product_image }}"
  data-variant-id="{{ current_variant.id }}"
  data-currency="{{ shop.currency }}"
  data-locale="{{ request.locale.iso_code }}"
  data-available="{{ product_available }}"
>
  <button
    type="button"
    id="{{ button_id }}"
    class="curetfy-cod-button"
    {% unless product_available %}disabled{% endunless %}
    style="
      background-color: {{ block.settings.button_color }};
      color: {{ block.settings.button_text_color }};
      border-radius: {{ block.settings.button_radius }}px;
      padding: {{ block.settings.button_padding }}px {{ block.settings.button_padding | times: 2 }}px;
      font-size: {{ block.settings.button_font_size }}px;
      {% if block.settings.button_full_width %}width: 100%;{% endif %}
    "
  >
    {% if block.settings.show_whatsapp_icon %}
      <svg class="curetfy-whatsapp-icon" viewBox="0 0 24 24" width="20" height="20" fill="currentColor">
        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
      </svg>
    {% endif %}
    <span>{{ block.settings.button_text }}</span>
  </button>
</div>

{{ 'cod-form.css' | asset_url | stylesheet_tag }}
<script src="{{ 'cod-form.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "COD Buy Button",
  "target": "section",
  "class": "curetfy-block",
  "enabled_on": {
    "templates": ["product", "index", "collection"],
    "groups": ["body", "aside"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Botón"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texto del botón",
      "default": "Comprar por WhatsApp"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Color del botón",
      "default": "#25D366"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Color del texto",
      "default": "#FFFFFF"
    },
    {
      "type": "range",
      "id": "button_radius",
      "label": "Bordes redondeados",
      "min": 0,
      "max": 30,
      "step": 2,
      "default": 8,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "button_padding",
      "label": "Espaciado interno",
      "min": 8,
      "max": 24,
      "step": 2,
      "default": 14,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "button_font_size",
      "label": "Tamaño de fuente",
      "min": 12,
      "max": 24,
      "step": 1,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "checkbox",
      "id": "button_full_width",
      "label": "Ancho completo",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_whatsapp_icon",
      "label": "Mostrar ícono WhatsApp",
      "default": true
    },
    {
      "type": "header",
      "content": "Formulario"
    },
    {
      "type": "text",
      "id": "form_title",
      "label": "Título del formulario",
      "default": "Completa tu pedido"
    }
  ],
  "presets": [
    {
      "name": "COD Buy Button"
    }
  ]
}
{% endschema %}
